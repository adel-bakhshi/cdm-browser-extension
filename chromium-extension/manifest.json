{
  "name": "CDM Browser Extension",
  "version": "0.5.2",
  "description": "Easily send download links to the CDM app and skip browser downloads. Enjoy advanced features like pause, resume, scheduling, and faster speeds for a smarter downloading experience. Simplify your workflow today!",
  "manifest_version": 3,
  "author": "Adel Bakhshi",
  "homepage_url": "https://cdmapp.netlify.app/",
  "permissions": [
    "downloads",
    "storage",
    "scripting",
    "contextMenus",
    "webRequest",
    "declarativeNetRequest",
    "alarms",
    "notifications"
  ],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://*.google.com/*",
        "*://*.youtube.com/*",
        "*://*.youtu.be/*",
        "*://*.vimeo.com/*",
        "*://*.netflix.com/*",
        "*://*.amazon.com/*",
        "*://*.hulu.com/*",
        "*://*.twitch.tv/*",
        "*://*.dailymotion.com/*",
        "*://*.disneyplus.com/*",
        "*://*.hbomax.com/*"
      ],
      "css": ["media-popup/style.css"],
      "js": ["media-popup/script.js"]
    }
  ]
}
